pipeline {
    agent {
        label 'server-1'
    }

    parameters {
        string(name: 'LAST_NAME', defaultValue: 'Sangala')
    }

    environment {
        NAME = "Sreekanth"
    }

    tools {
        maven 'MAVEN_HOME'
    }

    options {
        skipStagesAfterUnstable()
    }

    stages {
        stage('Build') {
            steps {
                bat 'mvn -B -DskipTests clean package'
                echo "Hello, ${env.NAME} ${params.LAST_NAME}."
            }
        }

        stage('Test') {
            parallel {
                stage('Test A') {
                    steps {
                        echo 'This is Test A'
                        bat 'mvn test'
                    }
                }
                stage('Test B') {
                    steps {
                        echo 'This is Test B'
                        bat 'mvn test'
                    }
                }
            }
        }
    }

    post {
        success {
            archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
        }
    }
}
