pipeline {
    agent {
  label 'server-1'
}
    parameters {
        string defaultValue: 'Sangala', name: 'LAST_NAME'
}
    environment {
        Name = "Sreekanth"
}
    tools {
        maven 'MAVEN_HOME'
}
    options {
        skipStagesAfterUnstable()
    }
    stages {
        stage('Build') {
            steps {
                bat 'mvn -B -DskipTests clean package'
                echo "Hello, $Name ${params.$name}."
            }
            post {
                success {
                    archiveArtifacts artifacts: 'target/*.jar', fingerprint: true
                }
            }
        }
      
    }
}
